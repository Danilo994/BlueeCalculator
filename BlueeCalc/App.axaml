<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="BlueeCalc.App">

    <!--  RESOURCES (somente dicionários, como suas cores)  -->
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="avares://BlueeCalc/Styles/ColorsNord.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

    <Application.Styles>

        <!-- FluentTheme SEM Mode (Avalonia 11 não usa mais Mode no XAML) -->
        <FluentTheme />

        <!-- Seus estilos custom -->
        <StyleInclude Source="avares://BlueeCalc/Styles/MinimalDark.axaml"/>

    </Application.Styles>
</Application>
